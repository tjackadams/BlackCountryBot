@page "/translations/delete/{Id:int}"

<Row>
    <Column ColumnSize="ColumnSize.IsFull.OnDesktop">
        <Heading Size="HeadingSize.Is2">Delete</Heading>

        <Heading Size="HeadingSize.Is3">Are you sure you want to delete this?</Heading>

        <SpinLoader IsLoading="@(Data == null)">
            <ContentTemplate>
                <Heading Size="HeadingSize.Is4">
                    Translation
                </Heading>
                <hr />

                <dl class="dl-horizontal">
                    <dt>
                        Id
                    </dt>
                    <dd>
                        @Data.Id
                    </dd>

                    <dt>
                        Original
                    </dt>
                    <dd>
                        @Data.OriginalPhrase
                    </dd>

                    <dt>
                        Translation
                    </dt>
                    <dd>
                        @Data.TranslatedPhrase
                    </dd>

                    <dt>
                        No. Tweets
                    </dt>
                    <dd>
                        @Data.TweetCount
                    </dd>
                </dl>
                <Button Color="Color.Danger" Clicked="@OnSubmitAsync">Delete</Button>
                <a href="/translations">Back to List</a>
            </ContentTemplate>
        </SpinLoader>

    </Column>
</Row>